<addon id="service.gpio.monitor" name="GPIO Monitor" version="0.0.2" provider-name="MattHuisman.nz">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="virtual.rpi-tools" version="7.0.100" optional="true"/>
  </requires>
  <extension point="xbmc.service" library="service.py" start="login" />
  <extension point="xbmc.addon.metadata">
    <platform>linux</platform>
    <description lang="en">Monitors a GPIO pin and runs a KODI function (eg. Shutdown) when it changes (Raspberry Pi Only)</description>
    <license>GNU General Public License, v2</license>
    <language></language>
    <website>http://www.matthuisman.nz</website>
  </extension>
</addon>

<addon id="plugin.program.noobs.companion" name="NOOBS Companion" version="0.1.3" provider-name="MattHuisman.nz">
